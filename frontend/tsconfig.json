  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "vite.config.ts", "ui/accordion.tsx", "ui/alert.tsx", "ui/aspect-ratio.tsx", "ui/avatar.tsx", "ui/badge.tsx", "ui/breadcrumb.tsx", "ui/calendar.tsx", "ui/carousel.tsx", "ui/chart.tsx", "ui/checkbox.tsx", "ui/collapsible.tsx", "ui/command.tsx", "ui/context-menu.tsx", "ui/drawer.tsx", "ui/dropdown-menu.tsx", "ui/form.tsx", "ui/hover-card.tsx", "ui/input-otp.tsx", "ui/label.tsx", "ui/menubar.tsx", "ui/navigation-menu.tsx", "ui/pagination.tsx", "ui/popover.tsx", "ui/progress.tsx", "ui/radio-group.tsx", "ui/resizable.tsx", "ui/scroll-area.tsx", "ui/select.tsx", "ui/separator.tsx", "ui/sidebar.tsx", "ui/skeleton.tsx", "ui/slider.tsx", "ui/sonner.tsx", "ui/switch.tsx", "ui/table.tsx", "ui/tabs.tsx", "ui/textarea.tsx", "ui/toggle-group.tsx", "ui/toggle.tsx", "ui/tooltip.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
